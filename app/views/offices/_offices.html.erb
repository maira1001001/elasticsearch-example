<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t 'activerecord.attributes.office.name' %></th>
        <th><%= t 'activerecord.attributes.office.address' %></th>
        <th><%= t '.actions', default: t('global.index.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, offices) do |office| %>
        <td><%= office.name %></td>
        <td><%= office.address %></td>
        <td>
          <%= link_to icon('eye-open'), office_path(office),
            class: 'btn btn-xs btn-success',
            title: t('offices.actions.show', default: t('global.actions.show')),
            data: { toggle: 'tooltip', container: 'body', placement: 'bottom' } %>
          <%= link_to icon('pencil'), edit_office_path(office),
            class: 'btn btn-xs btn-warning',
            title: t('offices.actions.edit', default: t('global.actions.edit')),
            data: { toggle: 'tooltip', container: 'body', placement: 'bottom' } %>
          <%= link_to icon('trash'), office_path(office),  method: :delete,
            class: 'btn btn-xs btn-danger',
            title: t('offices.actions.destroy', default: t('global.actions.destroy')),
            data: { confirm: t('offices.actions.confirm_destroy', default: t('global.actions.confirm_destroy')), toggle: 'tooltip', placement: 'bottom' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
