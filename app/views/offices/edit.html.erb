<div class="page-header">
  <div class="row">
    <div class="col-md-10">
      <h1><%= t '.title', default: t('global.edit.title') %></h1>
    </div>
    <div class="col-md-2 text-rigth">
      <div class="header-actions">
        <%= link_to icon('chevron-left'), dependency_path(@office.parent),
          class: 'btn btn-default btn-sm button-position',
          data: { toggle: 'tooltip', container: 'body' },
          title: t('.back', default: t('global.actions.back')) %>
        <%= link_to icon('eye-open'), @office,
          class: 'btn btn-success btn-sm button-position',
          data: { toggle: 'tooltip', container: 'body' },
          title: t('.show', default: t('global.actions.show')) %>
      </div>
    </div>
  </div>
</div>

<%= render 'form' %>
